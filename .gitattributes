print("Hallo! Das Kurswahlsystem startet...")
name = input("Wie hei√üt du? ")
print(f"Willkommen {name}!")
print("Hier sind die verf√ºgbaren Kurse:")

class Kurs:
    def __init__(self, name, typ, wochenstunden, klausuren_pro_semester, gewichtung):
        self.name = name
        self.typ = typ  # "LK", "GK", "Sport"
        self.wochenstunden = wochenstunden
        self.klausuren_pro_semester = klausuren_pro_semester
        self.gewichtung = gewichtung  # "doppelt" oder "einfach"
    
    def info_anzeigen(self):
        print(f"\n--- {self.name} ---")
        print(f"Typ: {self.typ}")
        print(f"Wochenstunden: {self.wochenstunden}")
        print(f"Klausuren pro Semester: {self.klausuren_pro_semester}")
        print(f"Gewichtung f√ºrs Abitur: {self.gewichtung}")


class Schueler:
    def __init__(self, name):
        self.name = name
        self.leistungskurse = []
        self.grundkurse = []
        self.sport = None
    
    def leistungskurs_waehlen(self, kurs):
        if len(self.leistungskurse) < 2:
            self.leistungskurse.append(kurs)
            print(f"‚úì {kurs.name} als Leistungskurs hinzugef√ºgt")
        else:
            print("‚úó Du hast bereits 2 Leistungskurse gew√§hlt!")
    
    def grundkurs_waehlen(self, kurs):
        self.grundkurse.append(kurs)
        print(f"‚úì {kurs.name} als Grundkurs hinzugef√ºgt")
    
    def sport_waehlen(self, sport_kurs):
        self.sport = sport_kurs
        print(f"‚úì {sport_kurs.name} als Sport (Praxis) hinzugef√ºgt")
    
    def kurswahl_anzeigen(self):
        print(f"\n{'='*50}")
        print(f"KURSWAHL VON: {self.name}")
        print(f"{'='*50}")
        
        print("\n LEISTUNGSKURSE (2 F√§cher):")
        if self.leistungskurse:
            for lk in self.leistungskurse:
                print(f"  ‚Ä¢ {lk.name} - {lk.wochenstunden}h/Woche")
        else:
            print("  Noch keine Leistungskurse gew√§hlt")
        
        print("\nüìñ GRUNDKURSE:")
        if self.grundkurse:
            for gk in self.grundkurse:
                print(f"  ‚Ä¢ {gk.name} - {gk.wochenstunden}h/Woche")
        else:
            print("  Noch keine Grundkurse gew√§hlt")
        
        print("\n SPORT (PRAXIS):")
        if self.sport:
            print(f"  ‚Ä¢ {self.sport.name} - {self.sport.wochenstunden}h/Woche")
        else:
            print("  Noch kein Sport gew√§hlt")
        
        # Gesamtstunden berechnen
        gesamt_stunden = 0
        for lk in self.leistungskurse:
            gesamt_stunden += lk.wochenstunden
        for gk in self.grundkurse:
            gesamt_stunden += gk.wochenstunden
        if self.sport:
            gesamt_stunden += self.sport.wochenstunden
        
        print(f"\n GESAMT WOCHENSTUNDEN: {gesamt_stunden}")
        print(f"{'='*50}\n")


# Beispiel-Kurse erstellen
def beispiel_kurse_erstellen():
    # Leistungskurse (5 Wochenstunden)
    mathe_lk = Kurs("Mathematik", "LK", 5, "2 (1 im 4. Sem)", "doppelt")
    deutsch_lk = Kurs("Deutsch", "LK", 5, "2 (1 im 4. Sem)", "doppelt")
    englisch_lk = Kurs("Englisch", "LK", 5, "2 (1 im 4. Sem)", "doppelt")
    
    # Grundkurse (3 Wochenstunden)
    bio_gk = Kurs("Biologie", "GK", 3, "1 pro Semester", "einfach")
    chemie_gk = Kurs("Chemie", "GK", 3, "1 pro Semester", "einfach")
    geschichte_gk = Kurs("Geschichte", "GK", 3, "1 pro Semester", "einfach")
    
    # Neu begonnene Fremdsprache (4 Wochenstunden)
    spanisch_gk = Kurs("Spanisch (neu)", "GK", 4, "1 pro Semester", "einfach")
    
    # Sport (2 Wochenstunden, keine Klausuren)
    sport = Kurs("Sport (Praxis)", "Sport", 2, "keine", "einfach (wenn eingebracht)")
    
    return {
        "leistungskurse": [mathe_lk, deutsch_lk, englisch_lk],
        "grundkurse": [bio_gk, chemie_gk, geschichte_gk, spanisch_gk],
        "sport": sport
    }


# Hauptprogramm
def main():
    # Hilfsfunktionen f√ºr robuste Eingaben
    def read_int_in_range(prompt, min_value, max_value):
        while True:
            try:
                val = int(input(prompt))
            except ValueError:
                print("Bitte eine Zahl eingeben.")
                continue
            if val < min_value or val > max_value:
                print(f"Bitte eine Zahl zwischen {min_value} und {max_value} eingeben.")
                continue
            return val

    def read_nonnegative_int(prompt, max_value=None):
        while True:
            try:
                val = int(input(prompt))
            except ValueError:
                print("Bitte eine g√ºltige Zahl eingeben.")
                continue
            if val < 0:
                print("Bitte eine nicht-negative Zahl eingeben.")
                continue
            if max_value is not None and val > max_value:
                print(f"Maximal {max_value} m√∂glich.")
                continue
            return val

    print("=" * 50)
    print("OBERSTUFEN KURSWAHLSYSTEM")
    print("=" * 50)
    
    # Sch√ºler erstellen
    name = input("\nWie hei√üt du? ")
    schueler = Schueler(name)
    
    # Kurse laden
    kurse = beispiel_kurse_erstellen()
    
    # Leistungskurse w√§hlen
    print("\n--- LEISTUNGSKURSE W√ÑHLEN (2 F√§cher) ---")
    print("Verf√ºgbare Leistungskurse:")
    for i, lk in enumerate(kurse["leistungskurse"], 1):
        print(f"{i}. {lk.name}")
    
    for i in range(2):
        while True:
            wahl = read_int_in_range(f"\nW√§hle Leistungskurs {i+1} (Nummer): ", 1, len(kurse["leistungskurse"])) - 1
            kurs_auswahl = kurse["leistungskurse"][wahl]
            if kurs_auswahl in schueler.leistungskurse:
                print("Diesen Kurs hast du bereits als Leistungskurs gew√§hlt. Bitte w√§hle einen anderen.")
                continue
            schueler.leistungskurs_waehlen(kurs_auswahl)
            break
    
    # Grundkurse w√§hlen
    print("\n--- GRUNDKURSE W√ÑHLEN ---")
    print("Verf√ºgbare Grundkurse:")
    for i, gk in enumerate(kurse["grundkurse"], 1):
        print(f"{i}. {gk.name}")
    
    max_gk = len(kurse["grundkurse"]) 
    anzahl_gk = read_nonnegative_int("\nWie viele Grundkurse m√∂chtest du w√§hlen? ", max_value=max_gk)
    for i in range(anzahl_gk):
        while True:
            wahl = read_int_in_range(f"W√§hle Grundkurs {i+1} (Nummer): ", 1, max_gk) - 1
            kurs_auswahl = kurse["grundkurse"][wahl]
            if kurs_auswahl in schueler.grundkurse:
                print("Diesen Grundkurs hast du bereits gew√§hlt. Bitte w√§hle einen anderen.")
                continue
            schueler.grundkurs_waehlen(kurs_auswahl)
            break
    
    # Sport w√§hlen
    sport_wahl = input("\nM√∂chtest du Sport (Praxis) w√§hlen? (j/n): ")
    if sport_wahl.lower() == 'j':
        schueler.sport_waehlen(kurse["sport"])
    
    # Kurswahl anzeigen
    schueler.kurswahl_anzeigen()


# Programm starten
if __name__ == "__main__":
    main()
